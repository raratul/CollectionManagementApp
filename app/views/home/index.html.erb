<div class="container my-3">
  <h1 class="mb-4 text-center">Welcome to Collection Management App</h1>

  <% if user_signed_in? %>
    <h3 class="text-success text-center mt-2 mb-2">
      Hi <%= current_user.name %>
      <% if current_user.admin? %>
        ( Admin )
      <% end %>,
      <br>
      User ID: <%= current_user.id %>, User Email: <%= current_user.email %>
    </h3>
  <% end %>

  <h2 class="mb-4">Latest Items</h2>
  <ul class="list-group">
    <% if @latest_items.present? %>
      <% @latest_items.each do |item| %>
        <li class="list-group-item">
          <%= link_to item.name, item %>
        </li>
      <% end %>
    <% else %>
      <p>Nothing to show here.</p>
    <% end %>
  </ul>

  <h2 class="mb-3">Top 5 Largest Collections</h2>
  <ul class="list-group mb-4">
    <% if @top_collections.present? %>
      <% @top_collections.each do |collection| %>
        <li class="list-group-item">
          <%= link_to collection.name, collection %>
        </li>
      <% end %>
    <% else %>
      <p>Nothing to show here.</p>
    <% end %>
  </ul>

  <h2>Tag Cloud</h2>
  <div>
    <% if @tags.present? %>
      <% @tags.each do |tag| %>
        <%= link_to tag, search_path(query: tag), class: 'badge bg-secondary' %>
      <% end %>
    <% else %>
      <p>Nothing to show here.</p>
    <% end %>
  </div>
</div>
