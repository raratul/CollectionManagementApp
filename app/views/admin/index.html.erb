<h1 class="d-flex justify-content-center">Admin Page</h1>

<h3 class="d-flex justify-content-center mb-3">Users Panel</h3>

<%= form_with(url: batch_action_admin_path, method: :patch) do |f| %>
  <div class="mt-5 mb-5">
    <%= submit_tag "Make Admin", class: "btn btn-outline-success me-3", name: "add_admins" %>
    <%= submit_tag "Remove Admin", class: "btn btn-outline-secondary me-3", name: "remove_admins" %>
    <%= submit_tag "Unblock", class: "btn btn-outline-info me-3", name: "unblock_users" %>
    <%= submit_tag "Block", class: "btn btn-outline-warning me-3", name: "block_users" %>
    <%= submit_tag "Delete", class: "btn btn-outline-danger me-3", name: "delete_users", data: { confirm: "Are you sure?" } %>  
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>User ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Admin?</th>
          <th>Blocked?</th>
          <th>Select</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.admin? ? 'Yes' : 'No' %></td>
            <td><%= user.blocked? ? 'Yes' : 'No' %></td>
            <td><%= check_box_tag "user_ids[]", user.id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
<% end %>
