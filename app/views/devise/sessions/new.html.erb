<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", style: "width: 45vw; margin-left: 6vw; margin-right: 6vw; margin-bottom: 3vw;"} %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", style: "width: 45vw; margin-left: 6vw; margin-right: 6vw; margin-bottom: 3vw;"} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
