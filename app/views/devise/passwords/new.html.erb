<div class="container mt-3">
  <h2 class="mb-4 text-center">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" },
                  wrapper_html: { class: "mb-3" } %>
    </div>

    <br>

    <div class="form-group">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <br>

  <%= render "devise/shared/links" %>
</div>
