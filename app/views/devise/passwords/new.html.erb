<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", style: "width: 45vw; margin-left: 6vw; margin-right: 6vw; margin-bottom: 3vw;" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-info" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
