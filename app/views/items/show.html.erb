<div class="container mt-5">
  <div class="row mb-4 text-center">
    <div class="col">
      <h1>Item Name: <%= @item.name %></h1>
      <h3>Item ID: <%= @item.id %></h3>
      <h3>Collection ID: <%= @collection.id %></h3>
      <h3>User ID: <%= @user.id %></h3>
      <h3>User Name: <%= @user.name %></h3>
      <p><strong>Tags:</strong> <span class="badge badge-secondary"><%= @item.tag %></span></p>
      <ul class="list-group">
        <% if @collection.custom_string1_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_string1_name %>:</strong> <%= @item.custom_string1_value %>
          </li>
        <% end %>
        <% if @collection.custom_string2_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_string2_name %>:</strong> <%= @item.custom_string2_value %>
          </li>
        <% end %>
        <% if @collection.custom_string3_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_string3_name %>:</strong> <%= @item.custom_string3_value %>
          </li>
        <% end %>

        <% if @collection.custom_int1_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_int1_name %>:</strong> <%= @item.custom_int1_value %>
          </li>
        <% end %>
        <% if @collection.custom_int2_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_int2_name %>:</strong> <%= @item.custom_int2_value %>
          </li>
        <% end %>
        <% if @collection.custom_int3_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_int3_name %>:</strong> <%= @item.custom_int3_value %>
          </li>
        <% end %>

        <% if @collection.custom_text1_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_text1_name %>:</strong> <%= @item.custom_text1_value %>
          </li>
        <% end %>
        <% if @collection.custom_text2_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_text2_name %>:</strong> <%= @item.custom_text2_value %>
          </li>
        <% end %>
        <% if @collection.custom_text3_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_text3_name %>:</strong> <%= @item.custom_text3_value %>
          </li>
        <% end %>

        <% if @collection.custom_bool1_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_bool1_name %>:</strong> <%= @item.custom_bool1_value %>
          </li>
        <% end %>
        <% if @collection.custom_bool2_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_bool2_name %>:</strong> <%= @item.custom_bool2_value %>
          </li>
        <% end %>
        <% if @collection.custom_bool3_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_bool3_name %>:</strong> <%= @item.custom_bool3_value %>
          </li>
        <% end %>

        <% if @collection.custom_date1_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_date1_name %>:</strong> <%= @item.custom_date1_value %>
          </li>
        <% end %>
        <% if @collection.custom_date2_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_date2_name %>:</strong> <%= @item.custom_date2_value %>
          </li>
        <% end %>
        <% if @collection.custom_date3_state %>
          <li class="list-group-item">
            <strong><%= @collection.custom_date3_name %>:</strong> <%= @item.custom_date3_value %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col">
        <div class="d-flex align-items-center">
          <% if current_user && @item.likes.exists?(user: current_user) %>
            <%= button_to 'Unlike',item_like_path(@item), method: :delete, remote: true, class: 'btn btn-outline-danger like-button me-3'%>
          <% else %>
            <%= button_to 'Like', item_like_path(@item), method: :post, remote: true, class: 'btn btn-outline-primary like-button me-3'%>
          <% end %>
          <p class="mb-0 like-count ml-2"><strong>Likes:</strong> <%= @item.likes.count %></p>
        </div>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col">
        <h2>Comments</h2>
        <div id="comments" class="list-group" data-item-id="<%= @item.id %>">
          <% @item.comments.each do |comment| %>
            <div class="list-group-item" id="comment-<%= comment.id %>">
              <p><strong><%= comment.user.email %>:</strong> <%= comment.body %></p>
              <% if comment.user == current_user || current_user.admin? %>
                <%= link_to 'Delete Comment', item_comments_path(comment.item, comment), method: :delete, remote: true, class: 'btn btn-outline-danger btn-sm' %>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <% if user_signed_in? %>
        <%= form_with(model: [@item, @item.comments.build], remote: true, id: "comment-form") do |form| %>
          <div class="form-group">
            <%= form.label :body, 'Add a Comment' %>
            <%= form.text_area :body, class: "form-control", rows: 3 %>
          </div>
          <div class="form-group">
            <%= form.submit 'Enter Comment', class: "btn btn-primary btn-sm mt-2" %>
          </div>
        <% end %>
      <% else %>
        <p>You must be <%= link_to 'logged in', new_user_session_path %> to add a comment.</p>
      <% end %>
    </div>
  </div>  
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const commentForm = document.getElementById('comment-form');
    if (commentForm) {
      commentForm.addEventListener('ajax:success', (event) => {
        const [data, status, xhr] = event.detail;
        const commentsDiv = document.getElementById('comments');
        commentsDiv.insertAdjacentHTML('beforeend', xhr.responseText);
        commentForm.reset();
      });

      commentForm.addEventListener('ajax:error', (event) => {
        const [data, status, xhr] = event.detail;
        alert('Error: ' + xhr.responseText);
      });
    }

    const commentsDiv = document.getElementById('comments');
    if (commentsDiv) {
      commentsDiv.addEventListener('click', (event) => {
        if (event.target.matches('.btn-danger')) {
          event.preventDefault();
          const url = event.target.getAttribute('href');
          fetch(url, {
            method: 'DELETE',
            headers: {
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content'),
              'Accept': 'text/javascript'
            }
          }).then(response => response.text()).then(html => {
            document.getElementById(`comment-${event.target.closest('.list-group-item').id.split('-')[1]}`).remove();
          });
        }
      });
    }
  });
</script>
