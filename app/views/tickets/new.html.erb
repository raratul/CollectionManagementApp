<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3><%= t('tickets.new_ticket') %></h3>
        </div>
        <div class="card-body">
          <%= form_with model: @ticket, local: true, id: 'ticket-form' do |form| %>
            <div class="form-group mb-3">
              <%= form.label :summary, t('tickets.summary'), class: 'form-label' %>
              <%= form.text_field :summary, class: 'form-control', required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :priority, t('tickets.priority'), class: 'form-label' %>
              <%= form.select :priority, options_for_select(['High', 'Average', 'Low']), { prompt: t('tickets.select_priority') }, { class: 'form-control', required: true } %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :collection_id, t('tickets.collection_id'), class: 'form-label' %>
              <%= form.collection_select :collection_id, current_user.collections, :id, :name, { prompt: t('tickets.no_collection') }, { class: 'form-control' } %>
            </div>

            <div class="form-group mt-4">
              <%= form.submit t('tickets.create_ticket'), class: 'btn btn-primary' %>
              <%= link_to t('tickets.cancel'), profile_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

