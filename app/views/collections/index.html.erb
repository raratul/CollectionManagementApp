<p style="color: green"><%= notice %></p>

<h1>Collections</h1>

<% @collections.each do |collection| %>
  <div class="row">
    <h2 class="col"><%= link_to collection.name, collection_path(collection) %></h2>
    <p class="col"><%= collection.description %></p>
  </div>
<% end %>

<div id="collections">
  <% @collections.each do |collection| %>
    <%= render collection %>
    <p>
      <%= link_to "Show this collection", collection %>
    </p>
  <% end %>
</div>

<% if current_user %>  
  <%= link_to "New collection", new_collection_path %>
<% end %>

