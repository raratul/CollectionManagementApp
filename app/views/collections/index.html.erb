<h1>My Collections</h1>
<%= link_to 'New Collection', new_collection_path %>

<% @collections.each do |collection| %>
  <div>
    <h2><%= link_to collection.name, collection %></h2>
    <p><%= collection.description %></p>
    <p>Category: <%= collection.category %></p>
    <p><%= link_to 'Edit', edit_collection_path(collection) %> | <%= link_to 'Delete', collection, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
