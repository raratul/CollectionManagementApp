<!DOCTYPE html>
<html>
<head>
  <title><%= t('site.title') %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body data-bs-theme="<%= @theme %>">
  <nav class="mb-3 navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container container-fluid">
      <a class="navbar-brand me-5" href="#"><%= t('site.title') %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to t('nav.home'), root_path, class: 'nav-link' %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to t('nav.my_collections'), user_collections_path(current_user), class: 'nav-link' %>
            </li>
            <% if current_user.admin? %>
              <li class="nav-item">
                <%= link_to t('nav.admin_page'), admin_path, class: 'nav-link' %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to t('nav.logout'), destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to t('nav.login'), new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to t('nav.register'), new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
          <li class="nav-item ms-5">
            <a class="nav-link" href="#" id="theme-toggle">
              <%= @theme == 'dark' ? t('nav.switch_to_light') : t('nav.switch_to_dark') %>
            </a>
          </li>
          <li class="nav-item">
            <%= link_to t('nav.switch_language'), toggle_language_path, method: :post, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
  <div class="container">
    <%= yield %>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const themeToggle = document.getElementById('theme-toggle');
      themeToggle.addEventListener('click', (event) => {
        event.preventDefault();
        const currentTheme = document.body.getAttribute('data-bs-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        document.body.setAttribute('data-bs-theme', newTheme);

        fetch('/toggle_theme', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
          },
          body: JSON.stringify({ theme: newTheme })
        }).then(response => {
          if (response.ok) {
            location.reload();
          }
        });
      });
    });
  </script>
</body>
</html>
